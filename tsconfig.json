{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@stories/*": ["stories/*"],
      "@components/*": ["components/*"],
    },
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": ".",
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ],
}